{
	"compilerOptions": {
		"target": "ES2018",
		"lib": ["ESNext", "dom"],
		"types": [],
		"module": "ESNext",
		"moduleResolution": "Node",
		"sourceMap": true,
		"removeComments": false,
		"outDir": "./dist",
		"baseUrl": "./src",
		"strict": true,
		"noEmit": true,
		"experimentalDecorators": true,
		"noImplicitReturns": true,
		"noUnusedLocals": false,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"noImplicitAny": false
	},
	"include": [
		"./src/**/*",
		"node_modules/bc-stubs/**/*.d.ts"
	]
}